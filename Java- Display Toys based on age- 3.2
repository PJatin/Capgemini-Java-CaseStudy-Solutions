	toys[4][0]="5";
	toys[4][1]="Chutes and Ladders";
	}
	
    public String getToy(int age)
    {	
        for(int i=0; i<toys.length - 1; i++){
            if(Integer.parseInt(toys[i][0]) == age){
                return toys[i][1];
            }
        }return "no toys available";
    }
	
    public static void main( String[] args )
	{
	    Scanner myScanner = new Scanner(System.in);
	    String myString = myScanner.next();
	    
	    Source obj = new Source();
	    String ans = obj.getToy(Integer.parseInt(myString));
	    
	    System.out.println(ans);
	    
	    myScanner.close();
	}
