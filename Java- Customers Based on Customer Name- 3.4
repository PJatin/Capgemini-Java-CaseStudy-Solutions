public class Source 
{
String customerDetails[][]={{"105","Prabu","Chennai"},{"102","Krithick","Bangalore"},{"205","Kiran","Mumbai" },
			{"202", "Shravan", "Pune" },{"252","Chandrav","Delhi"}};
	
	public String[] getCustomer(String city)
	{
	    int i, index = 0;
	    for(i=0; i<customerDetails.length; i++){
            if(city.equals(customerDetails[i][1])){
	            index = i;
	            break;
	        }
	    }return customerDetails[index];
    }
    
